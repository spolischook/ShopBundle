{% extends "::base.html.twig" %}
{% block title 'Shop list' %}
{% block body %}
<div class="row">
    <div class="span12">
        <h1>Shop list</h1>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>City</th>
                    <th>Lastvisit</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('shop_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.location }}</td>
                    <td>{{ entity.city }}</td>
                    <td>{% if entity.lastvisit %}{{ entity.lastvisit|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('shop_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('shop_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('shop_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
